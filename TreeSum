<!doctype html>
<html>
    <head>
        <title>TreeSum</title>
        <meta charset="utf-8">
    </head>
    <body>
        <script>
            
           (function() { 
            var arr = 
              [ 5, 7, 
                [ 4, [2], 8, [1,3], 2 ], 
                [ 9, [] ], 
                1, 8
              ];
            var sum = 0;

            function treeSum(arr) {

                for (let i = 0; i < arr.length; i++) {

                    if (typeof arr[i] === 'number'){ 
                        sum += arr[i];
                    }
                    
                    if (Array.isArray(arr[i])) {
                        treeSum(arr[i])
                    }
                }
                 return sum;
            }

            alert(treeSum(arr));
           })();
        </script>
    </body>
</html>
